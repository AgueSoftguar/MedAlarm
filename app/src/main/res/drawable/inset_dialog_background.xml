<?xml version="1.0" encoding="utf-8"?>
<!-- drawable is a reference to your 'real' dialog background -->
<!-- insetRight and insetLeft add the margins -->
<inset
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@android:color/transparent"
    android:insetRight="@dimen/dialog_horizontal_margin"
    android:insetLeft="@dimen/dialog_horizontal_margin"
    android:insetBottom="@dimen/dialog_content_view_bottom_margin"
    android:insetTop="@dimen/dialog_content_view_top_margin">
</inset>